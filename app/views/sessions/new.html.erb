  <style>
  .span12 { width: 940px }
  </style>
  <div class="span11  well">
  		<title>User Login</title> 
  	<h1>User Login</h1>
    <%= form_for(:session, :url=> sessions_path , :class => 'form-horizontal' ) do |f| %>

      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", :class=> "btn btn-large btn-primary" %>
    <% end %>

      </div>

