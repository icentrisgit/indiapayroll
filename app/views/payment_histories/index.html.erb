  </tr>

<% @payment_histories.each do |payment_history| %>
  <tr>
    <td><%= payment_history.emp_id %></td>
    <td><%= payment_history.period_id %></td>
    <td><%= payment_history.period_type %></td>
    <td><%= payment_history.gross_monthly %></td>
    <td><%= payment_history.basic %></td>
    <td><%= payment_history.hra %></td>
    <td><%= payment_history.conveyance %></td>
    <td><%= payment_history.medical_allowance %></td>
    <td><%= payment_history.professional_tax %></td>
    <td><%= payment_history.loss_of_hours %></td>
    <td><%= payment_history.tds %></td>
    <td><%= payment_history.tax_deducted %></td>
    <td><%= payment_history.net_monthly %></td>
    <td><%= link_to 'Show', payment_history %></td>
    <td><%= link_to 'Edit', edit_payment_history_path(payment_history) %></td>
    <td><%= link_to 'Destroy', payment_history, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

